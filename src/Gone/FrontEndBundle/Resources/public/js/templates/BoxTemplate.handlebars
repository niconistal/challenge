<div class="box">
    <form class="form-horizontal box-form" role="form">
        <div class="box-specific">
            <div class="form-group">
                <label for="id" class="col-sm-2 control-label">ID</label>
                <div class="col-sm-10">
                    <input type="text" name="id" class="form-control" value="{{box.id}}" disabled>
                </div>
            </div>
            <div class="form-group">
                <label for="name" class="col-sm-2 control-label">Name</label>
                <div class="col-sm-10">
                    <input type="text" name="name" class="form-control" value="{{box.name}}" disabled>
                </div>
            </div>
            <div class="form-group">
                <label for="status" class="col-sm-2 control-label">Status</label>
                <div class="col-sm-10">
                    <input type="text" name="status" class="form-control" value="{{box.status}}" disabled>
                </div>
            </div>
            <div class="form-group">
                <label for="offer" class="col-sm-2 control-label">Offer</label>
                <div class="col-sm-10">
                    <input type="text" name="offer" class="form-control" value="{{box.offer}}">
                </div>
            </div>
        </div>
        {{#unless offerLocked}}
            <button type="submit" class="btn btn-primary save">Save</button>
        {{/unless}}
        <div class="box-products">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                        <tr>
                            <td><a href="#/box/{{box.id}}/product/{{id}}">{{id}}</a></td>
                            <td>{{name}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{#if nextStatus}}
        <button class="btn btn-primary change-status">Change to {{nextStatus}}</button>
        {{/if}}
    </form>
</div>

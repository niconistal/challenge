<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h3 class="page-title">Box details</h3>
        </div>
    </div> 
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-sm-offset-1 col-md-5">
                <form class="form-horizontal box-form" role="form">
                    <div class="form-group">
                        <label for="id" class="col-sm-2 control-label">ID</label>
                        <div class="col-sm-10">
                            <input type="text" name="id" class="form-control" value="{{box.id}}" disabled>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name" class="col-sm-2 control-label">Name</label>
                        <div class="col-sm-10">
                            <input type="text" name="name" class="form-control" value="{{box.name}}" disabled>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="status" class="col-sm-2 control-label">Status</label>
                        <div class="col-sm-10">
                            <input type="text" name="status" class="form-control" value="{{box.status}}" disabled>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="offer" class="col-sm-2 control-label">Offer</label>
                        <div class="col-sm-10">
                            <input type="text" name="offer" class="form-control" value="{{box.offer}}">
                        </div>
                    </div>
                    {{#unless offerLocked}}
                        <button type="submit" class="btn btn-primary save">Save</button>
                    {{/unless}}
                    {{#if nextStatus}}
                        <button class="btn btn-primary change-status">Change to {{nextStatus}}</button>
                    {{/if}}
            </form>
        </div>
        <div class="col-xs-12 col-sm-2 col-sm-offset-1 col-md-4"></div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
            <h4>Products</h4>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                        <tr>
                            <td><a href="#/box/{{box.id}}/product/{{id}}">{{id}}</a></td>
                            <td>{{name}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>  
</div>

